<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".splash.coffeeTypeFragments.Frappuccino_Fragment">

        <GridLayout
            android:animateLayoutChanges="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="2"
            android:rowCount="2"
            android:padding="1dp">

            <!-- Row 1, Column 1 -->
            <androidx.cardview.widget.CardView
                app:cardElevation="8dp"
                app:cardCornerRadius="8dp"
                android:layout_width="0dp"
                android:layout_height="210dp"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_margin="8dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <ImageView
                        android:scaleType="centerCrop"
                        android:layout_width="match_parent"
                        android:layout_height="125dp"
                        android:src="@drawable/fra4"/>
                    <TextView
                        android:textSize="20sp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Frappuccino"
                        android:textColor="@color/main"
                        android:textStyle="bold"/>
                    <TextView
                        android:textSize="17sp"
                        android:layout_marginTop="1dp"
                        android:layout_marginLeft="7dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pumpkin Spice"
                        android:fontFamily="@font/stylish"
                        android:textColor="@color/main"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:layout_marginTop="1dp"
                            android:layout_marginLeft="13dp"
                            android:text="Rs"
                            android:fontFamily="@font/stylish"
                            android:textColor="@color/main"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:layout_marginTop="1dp"
                            android:layout_marginLeft="3dp"
                            android:text="1545"
                            android:fontFamily="@font/stylish"
                            android:textColor="@color/main"/>
                    </LinearLayout>

                </LinearLayout>
                <ImageButton
                    android:id="@+id/card1"
                    android:layout_marginTop="171dp"
                    android:layout_marginLeft="115dp"
                    android:src="@drawable/baseline_add_24"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/rounded_button"/>
            </androidx.cardview.widget.CardView>

            <!-- Row 1, Column 2 -->
            <androidx.cardview.widget.CardView
                app:cardElevation="8dp"
                app:cardCornerRadius="8dp"
                android:layout_width="0dp"
                android:layout_height="210dp"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_margin="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <ImageView
                        android:scaleType="centerCrop"
                        android:layout_width="match_parent"
                        android:layout_height="125dp"
                        android:src="@drawable/fra2"/>
                    <TextView
                        android:textSize="20sp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Frappuccino"
                        android:textColor="@color/main"
                        android:textStyle="bold"/>
                    <TextView
                        android:textSize="17sp"
                        android:layout_marginTop="1dp"
                        android:layout_marginLeft="7dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="with Caramel"
                        android:fontFamily="@font/stylish"
                        android:textColor="@color/main"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:layout_marginTop="1dp"
                            android:layout_marginLeft="13dp"
                            android:text="Rs"
                            android:fontFamily="@font/stylish"
                            android:textColor="@color/main"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:layout_marginTop="1dp"
                            android:layout_marginLeft="3dp"
                            android:text="1255"
                            android:fontFamily="@font/stylish"
                            android:textColor="@color/main"/>
                    </LinearLayout>

                </LinearLayout>
                <ImageButton
                    android:id="@+id/card2"
                    android:layout_marginTop="171dp"
                    android:layout_marginLeft="115dp"
                    android:src="@drawable/baseline_add_24"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/rounded_button"/>

            </androidx.cardview.widget.CardView>

            <!-- Row 2, Column 1 -->
            <androidx.cardview.widget.CardView
                app:cardElevation="8dp"
                app:cardCornerRadius="8dp"
                android:layout_width="0dp"
                android:layout_height="210dp"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_margin="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <ImageView
                        android:scaleType="centerCrop"
                        android:layout_width="match_parent"
                        android:layout_height="125dp"
                        android:src="@drawable/fra1"/>
                    <TextView
                        android:textSize="20sp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Frappuccino"
                        android:textColor="@color/main"
                        android:textStyle="bold"/>
                    <TextView
                        android:textSize="17sp"
                        android:layout_marginTop="1dp"
                        android:layout_marginLeft="7dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="with Mocha"
                        android:fontFamily="@font/stylish"
                        android:textColor="@color/main"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:layout_marginTop="1dp"
                            android:layout_marginLeft="13dp"
                            android:text="Rs"
                            android:fontFamily="@font/stylish"
                            android:textColor="@color/main"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:layout_marginTop="1dp"
                            android:layout_marginLeft="3dp"
                            android:text="N/A"
                            android:fontFamily="@font/stylish"
                            android:textColor="@color/main"/>
                    </LinearLayout>

                </LinearLayout>
                <ImageButton
                    android:id="@+id/card3"
                    android:layout_marginTop="171dp"
                    android:layout_marginLeft="115dp"
                    android:src="@drawable/baseline_add_24"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/rounded_button"/>

            </androidx.cardview.widget.CardView>

            <!-- Row 2, Column 2 -->
            <androidx.cardview.widget.CardView
                app:cardElevation="8dp"
                app:cardCornerRadius="8dp"
                android:layout_width="0dp"
                android:layout_height="210dp"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_margin="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <ImageView
                        android:scaleType="centerCrop"
                        android:layout_width="match_parent"
                        android:layout_height="125dp"
                        android:src="@drawable/fra3"/>
                    <TextView
                        android:textSize="20sp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Frappuccino"
                        android:textColor="@color/main"
                        android:textStyle="bold"/>
                    <TextView
                        android:textSize="17sp"
                        android:layout_marginTop="1dp"
                        android:layout_marginLeft="7dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="with Butterbeer"
                        android:fontFamily="@font/stylish"
                        android:textColor="@color/main"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:layout_marginTop="1dp"
                            android:layout_marginLeft="13dp"
                            android:text="Rs"
                            android:fontFamily="@font/stylish"
                            android:textColor="@color/main"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:layout_marginTop="1dp"
                            android:layout_marginLeft="3dp"
                            android:text="899"
                            android:fontFamily="@font/stylish"
                            android:textColor="@color/main"/>
                    </LinearLayout>

                </LinearLayout>
                <ImageButton
                    android:id="@+id/card4"
                    android:layout_marginTop="171dp"
                    android:layout_marginLeft="115dp"
                    android:src="@drawable/baseline_add_24"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/rounded_button"/>

            </androidx.cardview.widget.CardView>

        </GridLayout>








    </LinearLayout>
</ScrollView>
