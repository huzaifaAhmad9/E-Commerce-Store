<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".splash.authentication.SignUp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_marginTop="50dp"
            android:id="@+id/main_logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_marginStart="45dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome to Coffee Shop"
                android:textColor="@color/main"
                android:textSize="35sp"
                android:textStyle="bold"
                android:fontFamily="@font/stylish"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/animation1"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_margin="30dp"
            android:layout_width="340dp"
            android:layout_height="490dp">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardBackgroundColor="@color/main"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp">
                <LinearLayout
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SignUp Here"
                        android:layout_marginTop="13dp"
                        android:textColor="#4D2D18"
                        android:fontFamily="@font/stylish"
                        android:textSize="35sp"/>


                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_marginTop="25dp"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:id="@+id/name"
                        android:layout_width="300dp"
                        app:startIconTint="#4D2D18"
                        android:textColorHint="#4D2D18"
                        app:startIconDrawable="@drawable/baseline_person_2_24"
                        app:boxStrokeColor="#4D2D18"
                        android:layout_height="wrap_content"
                        app:endIconTint="@color/brown"
                        app:hintTextColor="@color/brown"
                        android:hint="Name"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/brown"
                            android:maxLines="1"
                            android:inputType="text"/>

                    </com.google.android.material.textfield.TextInputLayout>


                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:id="@+id/phone"
                        android:layout_width="300dp"
                        app:counterEnabled="true"
                        app:counterMaxLength="10"
                        app:errorEnabled="true"
                        app:startIconTint="#4D2D18"
                        android:textColorHint="#4D2D18"
                        app:startIconDrawable="@drawable/baseline_phone_24"
                        app:boxStrokeColor="#4D2D18"
                        android:layout_height="wrap_content"
                        app:endIconTint="@color/brown"
                        app:hintTextColor="@color/brown"
                        android:hint="Phone No"
                        app:prefixText="@string/prefix"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/brown"
                            android:maxLines="1"
                            android:inputType="number"/>

                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:id="@+id/email"
                        android:layout_width="300dp"
                        app:startIconTint="#4D2D18"
                        android:textColorHint="#4D2D18"
                        app:startIconDrawable="@drawable/baseline_email_24"
                        app:boxStrokeColor="#4D2D18"
                        app:boxStrokeErrorColor="#F40505"
                        android:layout_height="wrap_content"
                        app:endIconMode="clear_text"
                        app:endIconTint="@color/brown"
                        app:hintTextColor="@color/brown"
                        android:hint="Enter Email"
                        app:suffixText="@string/suffix"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/brown"
                            android:maxLines="1"
                            android:inputType="textEmailAddress"/>

                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:id="@+id/pass"
                        android:layout_width="300dp"
                        app:startIconTint="#4D2D18"
                        android:textColorHint="#4D2D18"
                        app:startIconDrawable="@drawable/baseline_password_24"
                        app:boxStrokeColor="#4D2D18"
                        app:boxStrokeErrorColor="#F40505"
                        android:layout_height="wrap_content"
                        app:endIconTint="@color/brown"
                        app:endIconMode="password_toggle"
                        app:hintTextColor="@color/brown"
                        android:hint="Enter Password"
                        app:counterEnabled="true"
                        app:counterMaxLength="6"
                        app:errorEnabled="true"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/brown"
                            android:maxLines="1"
                            android:inputType="textPassword"/>

                    </com.google.android.material.textfield.TextInputLayout>


                    <Button
                        android:layout_marginTop="20dp"
                        android:id="@+id/btn"
                        android:layout_width="316dp"
                        android:layout_height="62dp"
                        android:layout_gravity="center"
                        app:shapeAppearance="?attr/shapeAppearanceCornerMedium"
                        android:text="SignUp"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:backgroundTint="@color/brown" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/main1"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Already Have An Account?"
                android:textColor="@color/main"
                android:textSize="20sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/login"
                android:layout_marginTop="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Back to Login"
                android:textColor="@color/brown"
                android:textSize="25sp"
                android:fontFamily="@font/stylish"
                android:textStyle="bold"/>

        </LinearLayout>

        <ProgressBar
            android:id="@+id/progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="7dp"
            android:backgroundTint="@color/brown"
            android:visibility="gone"/>


    </LinearLayout>



</LinearLayout>